---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('thoughts');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'thoughts'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Clinton's Thoughts`}>
	<main>
		<a href="/thoughts" class="back-link">‚Üê Back to Thoughts</a>
		
		<article class="card">
			{post.data.image && <div class="banner" style={`background-image: url(${post.data.image})`}></div>}
			<div class="header">
				<h1>{post.data.title}</h1>
				<div class="meta">
					<time datetime={post.data.pubDate.toISOString()}>
						{post.data.pubDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})}
					</time>
					<div class="tags">
						{post.data.tags?.map((tag) => <span class="tag">#{tag}</span>)}
					</div>
				</div>
			</div>
			
			<div class="content">
				<Content />
			</div>
		</article>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.back-link {
		display: inline-block;
		margin-bottom: 2rem;
		color: rgb(var(--accent-light));
		text-decoration: none;
		font-weight: bold;
		transition: transform 0.2s;
	}
	.back-link:hover {
		transform: translateX(-5px);
	}
	.card {
		background: rgba(30, 41, 59, 0.7);
		backdrop-filter: blur(12px);
		border-radius: 16px;
		padding: 3rem;
		border: 1px solid rgba(255, 255, 255, 0.05);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
		overflow: hidden; /* Ensure banner doesn't overflow rounded corners */
	}
	.banner {
		height: 300px;
		width: calc(100% + 6rem); /* Account for padding */
		margin: -3rem -3rem 2rem -3rem; /* Pull banner to edges */
		background-size: cover;
		background-position: center;
		mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
		-webkit-mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
	}
	.header {
		margin-bottom: 2rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		padding-bottom: 2rem;
	}
	h1 {
		font-size: 3rem;
		margin: 0 0 1rem 0;
		line-height: 1.1;
	}
	.meta {
		display: flex;
		gap: 1rem;
		align-items: center;
		color: #94a3b8;
		font-size: 0.9rem;
	}
	.tags {
		display: flex;
		gap: 0.5rem;
	}
	.tag {
		background: rgba(139, 92, 246, 0.1);
		color: rgb(var(--accent-light));
		padding: 0.2rem 0.6rem;
		border-radius: 999px;
	}
	/* Markdown Content Styles */
	.content :global(h1),
	.content :global(h2),
	.content :global(h3) {
		color: rgb(var(--accent-light));
		margin-top: 2rem;
	}
	.content :global(p) {
		margin-bottom: 1.5rem;
		color: #cbd5e1;
	}
	.content :global(a) {
		color: rgb(var(--accent));
	}
	.content :global(pre) {
		background: #0f172a !important;
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		overflow-x: auto;
	}
	.content :global(blockquote) {
		border-left: 4px solid rgb(var(--accent));
		margin: 1.5rem 0;
		padding-left: 1.5rem;
		font-style: italic;
		color: #94a3b8;
	}
	.content :global(ul) {
		margin-bottom: 1.5rem;
		padding-left: 1.5rem;
	}
	.content :global(li) {
		margin-bottom: 0.5rem;
	}
</style>
